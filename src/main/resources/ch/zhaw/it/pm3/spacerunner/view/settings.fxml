<GridPane prefHeight="400.0" prefWidth="600.0" styleClass="darkbg" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.zhaw.it.pm3.spacerunner.view.SettingsViewController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="187.0" minWidth="10.0" percentWidth="10.0" prefWidth="49.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="351.0" minWidth="10.0" percentWidth="90.0" prefWidth="351.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="75.0" minHeight="10.0" percentHeight="5.0" prefHeight="39.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" percentHeight="75.0" prefHeight="121.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" percentHeight="5.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="65.0" minHeight="10.0" percentHeight="15.0" prefHeight="54.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="33.0" minHeight="10.0" percentHeight="5.0" prefHeight="33.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <GridPane styleClass="settings" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="40.0" percentHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="40.0" percentHeight="20.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="40.0" percentHeight="20.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="40.0" percentHeight="20.0" prefHeight="40.0" />
            </rowConstraints>
            <children>
                <Label styleClass="title" text="SETTINGS" />

                <Label text="PLAYER NAME" GridPane.rowIndex="1" />
                <TextField fx:id="playerName" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="SOUND VOLUME (in %)" GridPane.rowIndex="2" />
                <Slider showTickLabels="true" showTickMarks="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="FRAMERATE (in FPS)" GridPane.rowIndex="3" />
                <Slider blockIncrement="30.0" majorTickUnit="30.0" max="90.0" min="30.0" minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="60.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
