<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<HBox fx:id="shopContentHBox" stylesheets="@style.css" xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx" styleClass="shopContentCell">
    <GridPane fx:id="contentWrapper" prefWidth="100">
        <columnConstraints>
            <ColumnConstraints percentWidth="20" />
            <ColumnConstraints percentWidth="20" />
            <ColumnConstraints percentWidth="20" />
            <ColumnConstraints percentWidth="20" />
            <ColumnConstraints percentWidth="20" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="100" />
        </rowConstraints>
        <ImageView fx:id="contentImageView" GridPane.columnIndex="0"></ImageView>
        <Label fx:id="contentTitelLabel" GridPane.columnIndex="1"></Label>
        <Label fx:id="contentPriceLabel" GridPane.columnIndex="2" styleClass="priceLabel"></Label>
        <Button fx:id="buyButton" GridPane.columnIndex="3"></Button>
        <Button fx:id="activateButton" GridPane.columnIndex="4"></Button>
    </GridPane>
</HBox>