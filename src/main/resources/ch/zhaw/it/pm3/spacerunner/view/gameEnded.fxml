<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="400.0" prefWidth="600.0" styleClass="darkbg" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.zhaw.it.pm3.spacerunner.view.GameEndedViewController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="187.0" minWidth="10.0" percentWidth="10.0" prefWidth="49.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="351.0" minWidth="10.0" percentWidth="90.0" prefWidth="351.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="75.0" minHeight="10.0" percentHeight="5.0" prefHeight="39.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" percentHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="121.0" minHeight="10.0" percentHeight="20.0" prefHeight="121.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="121.0" minHeight="10.0" percentHeight="20.0" prefHeight="121.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="121.0" minHeight="10.0" percentHeight="10.0" prefHeight="121.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="65.0" minHeight="10.0" percentHeight="20.0" prefHeight="54.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="33.0" minHeight="10.0" percentHeight="5.0" prefHeight="33.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <GridPane GridPane.columnIndex="1" GridPane.rowIndex="5">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="47.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="6.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="47.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                    <HBox alignment="CENTER" GridPane.columnIndex="0">
                        <children>
                            <Button id="home" fx:id="showMenuButton" mnemonicParsing="false" onAction="#showMenu"
                                    prefHeight="96.0" prefWidth="236.0" text="MENU" GridPane.vgrow="ALWAYS"/>
                        </children>
                    </HBox>
                    <HBox alignment="CENTER" GridPane.columnIndex="2">
                        <children>
                            <Button id="home" fx:id="playAgainButton" mnemonicParsing="false" onAction="#playAgain" prefHeight="96.0" prefWidth="236.0" text="RESTART" GridPane.vgrow="ALWAYS" />
                        </children>
                    </HBox>
            </children>
        </GridPane>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <children>
                <Label fx:id="score" styleClass="title"  />
            </children>
        </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
            <Label fx:id="name" styleClass="title" text="congrats" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
         <children>
            <Label fx:id="collectedCoins" styleClass="title" />
         </children>
      </HBox>
    </children>
</GridPane>
